{
  "plugins": ["react", "prettier"],
  "extends": ["airbnb", "airbnb/hooks", "plugin:prettier/recommended", "prettier/react"],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true,
    "jest": true,
    "es6": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "React": true,
    "document": true,
    "window": true
  },
  "settings": {
    "react": {
      "version": "detect" // depends on eslint-plugin-react
    }
  }
}
